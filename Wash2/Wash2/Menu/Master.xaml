<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             BackgroundColor="#359d9e"
             x:Class="Wash2.Menu.Master" Title="Master">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            Margin="20,10,20,40"
        >
            <Frame Margin="10"
               BorderColor="Black"
               CornerRadius="100"
               HeightRequest="60"
               WidthRequest="60"
               IsClippedToBounds="True"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Image Source="menuCar.jpg"
                 Aspect="AspectFill"
                 Margin="-20"
                 HeightRequest="100"
                 WidthRequest="100" />
            </Frame>

            <Label
                HorizontalOptions="Center"
                Text="ROBERTO HERNANDEZ"
                TextColor="White"
                />
            <Button Text="Estado de servicio"
                x:Name="btnedoserv"
                TextColor="#DCF8C6"
                BackgroundColor="transparent"
            />

            <Button Text="Autos Lavados"
                x:Name="btnautos" TextColor="White"
                BackgroundColor="transparent"
            />
            <Button Text="Pagos"
                x:Name="btnPagos"
                BackgroundColor="transparent"
                Clicked="btnpagos_Clicked" TextColor="White"
            />
            
            <Button Text="Cerrar Sesión"
                x:Name="btnCerrarSesion" BackgroundColor="transparent"  TextColor="White"
                    Clicked="BtnCerrarSesion_Clicked"
           />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>