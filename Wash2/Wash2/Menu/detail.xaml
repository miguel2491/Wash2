<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wash2.Menu.detail"
             Title = "WASH DRY APP"
             BackgroundColor="#225374">
    <ContentPage.Content>
        <FlexLayout Direction="Column" JustifyContent="SpaceBetween">
            <StackLayout Margin="20,60,20,2" >
                <Frame 
                    HasShadow="True"   
                    Padding="1,1,1,1"
                    BackgroundColor="transparent"
                    BorderColor="black"
                    OutlineColor="#7ee596"
                    CornerRadius="10"
                    
                    IsClippedToBounds="True">
                    <Image 
                        Source="inicio.jpg"
                        WidthRequest="600"
                    />
                </Frame>
            </StackLayout>
            <StackLayout Margin="60,-90,60,5">
                <Button 
                    CornerRadius="5"
                    Text="SOLICITUDES"
                    WidthRequest="50"
                    HeightRequest="50"
                    x:Name="btnSolicitudes"
                    TextColor="#255371"
                    BackgroundColor="#7ee596"
                    Clicked="Solicitudes_Clicked"
                />
            </StackLayout>
            <StackLayout 
                BackgroundColor="#7ee596"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                HeightRequest="60"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}">
                <Image
                    Source="menu_green.png" 
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                />
            </StackLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>