<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wash2.Menu.detail"
             BackgroundColor="#225374">
    <ContentPage.Content>
        <StackLayout Margin="20,40,20,20">
            <Image
                Source="menuCar.png"
                HeightRequest="300"
                WidthRequest="300"
                />
            <Button 
                    Text="SOLICITUDES"
                    WidthRequest="90"
                    x:Name="btnSolicitudes"
                    TextColor="#255371"
                    BackgroundColor="#7ee596"
                    Clicked="Solicitudes_Clicked"
                />
            <Image
                Margin="50,90,50,50"
                Source="menu_green.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>